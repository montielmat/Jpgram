<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("partials/head")%>
    
    <title>Jpgram</title>
</head>
<body>
    <%- include("partials/nav")%>
    <hr>
<!-- IMAGES GALERY -->
<div class="container-md animate__animated animate__fadeInUp shadow border p-4 mb-4 g-3">
    <h5 class="text-center">Add some images</h5>
    <div class="row">
        <% images.forEach( function(image) { %>
            <div class="col-md-4 my-3">
                <div class="card w-100 shadow">
                    <img class="card-img-top h-25" 
                    src="<%=image.path%>"/>
                    <div class="card-body">
                        <h5 class="card-title"><%=image.title%></h5>
                        <p class="card-text"><%=image.description%></p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted"><%=format(image.date)%></small>
                    </div>
                    <div class="d-flex">
                        <a class="btn btn-danger me-2 w-50" href="/delete/<%=image._id%>">Delete</a>
                        <a class="btn btn-info w-50" href="/upload">Edit</a>
                    </div>
                </div>
            </div>
         <% }) %>
    </div>
</div>
</div>
<script src="https://kit.fontawesome.com/adc735e090.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>